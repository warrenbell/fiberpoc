  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Fiber POC App Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/app/.env",
      "program": "${workspaceFolder}/app/cmd/main.go",
      "cwd": "${workspaceFolder}/app"
    },
    {
      "name": "Debug Build Test Postgres",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/app/.env",
      "program": "${workspaceFolder}/app/scripts/build_test_postgres/main.go",
      "cwd": "${workspaceFolder}/app"
    },
    {
      "name": "Debug Integration Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": []
    }
  ]
}
